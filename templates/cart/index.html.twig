{% extends 'base.html.twig' %}

{% block title %}Hello CartController!{% endblock %}

{% block body %}
<head>
    <!-- Favicon  -->
    <link rel="icon" href="img/core-img/favicon.ico">
    <!-- Core Style CSS -->
    <link rel="stylesheet" href="/cart/css/core-style.css">
    <link rel="stylesheet" href="style.css">
    <!-- Responsive CSS -->
    <link href="/cart/css/responsive.css" rel="stylesheet">
</head>

<body>



    <div id="wrapper">

        <!-- ****** Cart Area Start ****** -->
        <div class="cart_area section_padding_100 clearfix">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="cart-table clearfix">
                            <table class="table table-responsive">
                                <thead>
                                    <img src="/cart/logo.png" class="logo_panier" alt="logo" width="20%" style="padding-bottom: 20px;">
                                    <h1>Ajouter un panier</h1>
                                    <tr>
                                        <th>Produit</th>
                                        <th>Quantité</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td class="cart_product_img d-flex align-items-center">

                                            <h6><textarea placeholder="Aubergine, panais..." name="produit1" cols="60" rows="3"></textarea></h6>
                                        </td>

                                        <td class="qty">
                                            <div class="quantity">
                                                <span class="qty-minus" onclick="var effect = document.getElementById('qty'); var qty = effect.value; if( !isNaN( qty ) &amp;&amp; qty &gt; 1 ) effect.value--;return false;"><i class="fa fa-minus" aria-hidden="true"></i></span>
                                                <input type="number" class="qty-text" id="qty" step="1" min="1" max="99" name="quantity" value="1"><select name="unité" id="unite">

                                                <option value="">kg/Unité</option>

                                                <option value="u">unité</option>

                                                <option value="kg">kg</option>>

                                            </div>
                                        </td>

                                    </tr>
                                </tbody>
                            </table>
                        </div>



                    </div>
                </div>

                <div class="row">


                    <div class="col-12 col-lg-4">
                        <div class="cart-total-area mt-70">
                            <div class="cart-page-heading">
                            </div>
                                <h5><label for="avatar">Ajouter une photo à votre annonce?</label><br/></h5>
                                <input type="file"id="panier" name="avatar" accept="image/png, image/jpeg"><br/>


                            <a href="checkout.html" class="btn karl-checkout-btn">mettre en ligne</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- ****** Cart Area End ****** -->


    </div>
    <!-- /.wrapper end -->

    <!-- jQuery (Necessary for All JavaScript Plugins) -->
    <script src="js/jquery/jquery-2.2.4.min.js"></script>
    <!-- Popper js -->
    <script src="js/popper.min.js"></script>
    <!-- Bootstrap js -->
    <script src="js/bootstrap.min.js"></script>
    <!-- Plugins js -->
    <script src="js/plugins.js"></script>
    <!-- Active js -->
    <script src="js/active.js"></script>

</body>

{% endblock %}
